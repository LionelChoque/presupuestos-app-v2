{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "removeComments": true
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "client/**/*", "**/*.test.ts", "dist"]
}